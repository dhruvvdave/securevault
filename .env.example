# SecureVault Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database
DATABASE_URL=sqlite:///securevault.db

# Encryption
# Generate a 32-byte key for AES-256 encryption
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# HaveIBeenPwned API Key (optional, for email breach checking)
# Get your API key from: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=

# CORS Origins (comma-separated)
# For local development:
CORS_ORIGINS=http://localhost:5173,http://localhost:5001
# For production on Render, set to your frontend URL:
# CORS_ORIGINS=https://your-frontend.onrender.com

# Frontend API URL
# For local development:
VITE_API_URL=http://localhost:5001/api
# For production on Render, set to your backend URL:
# VITE_API_URL=https://your-backend.onrender.com/api
